    <script>
        document.getElementById('searchForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Ngăn chặn sự kiện mặc định của form
    
    var searchText = document.getElementById('searchInput').value.trim().toLowerCase(); // Lấy nội dung tìm kiếm và chuẩn hóa
    
    var historyItems = document.querySelectorAll('.history'); // Lấy tất cả các phần tử có class 'history'
    
    historyItems.forEach(function(item) {
        var labels = item.querySelectorAll('ul li label'); // Lấy tất cả các thẻ label trong phần tử
        
        labels.forEach(function(label) {
            var labelText = label.textContent.trim().toLowerCase(); // Lấy nội dung của thẻ label và chuẩn hóa
            
            if (labelText.includes(searchText)) { // Kiểm tra xem nội dung của label có chứa nội dung tìm kiếm không
                label.style.backgroundColor = 'yellow'; // Nếu có, đánh dấu nền của label là màu vàng
            } else {
                label.style.backgroundColor = ''; // Nếu không, loại bỏ đánh dấu nền
            }
        });
    });
});




